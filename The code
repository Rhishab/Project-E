    <div id="map"></div>
    <script>
        var map,infoWindows;
        function initMap(){{var options = {
                center: { lat: 27.703317, lng: 85.315743},
                zoom: 13

            };
            var map=new google.maps.Map(document.getElementById('map'),options);



        };
        var location =[
            ["Maharajgunj police station",  27.7400064, 85.3196088],
            ["Metropolitan Polce station Chagal", 27.7051295,  85.2887636]
        ];
        var infowindow = new google.maps.InfoWindow();
        var marker,i;
        for(i=0;i<location.length;i++) {
            marker= new google.maps.Marker({
                position: new google.maps.LatLng(location[i][1], location[i][2]),
                map:map
            });
            google.maps.event.addListener(marker, 'click', (function(marker, location) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
        }
            


      

    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDSD0qzwd6nVIbyg7TTDVYUZBgTVwlN75k&callback=initMap"></script>

