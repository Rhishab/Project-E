      function initMap() {
        var direction= google.maps.directionservices
        // Create the map.
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: {lat:27.703803, lng: 85.316789},
          mapTypeId: 'terrain'
        });
        //how to make "I am here" marker
        var content = "You are here";
        var infowindow = new google.maps.InfoWindow({
            content: content

            });
            
            var marker = new google.maps.Marker({
                position: map.center,
                map: map,
                title: 'Uluru (Ayers Rock)'
                });
                marker.addListener('click', function() {
                    infowindow.open(map, marker);
                    }); 
                    marker.addListener("click" , function(){
                        infowindow.open(map,marker);
                        });
            

        // Construct the circle for each value in citymap.
        // Note: We scale the area of the circle based on the DangerLevel.
        for (var city in data) {
          // Add the circle for this city to the map.
          var cityCircle = new google.maps.Circle({
            strokeColor: '#FF0000',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#FF0000',
            fillOpacity: 0.35,
            clickable : true,
            map: map,
            
            center: data[city].center,
            radius: Math.sqrt(data[city].Dangerlevel) * 1000
          }); 

          // Info- Window 
          var Information = "Danger";
          var CircleInfoD = new google.maps.InfoWindow({
            content : Information
          })
          google.maps.event.addListener(cityCircle, 'click', function(){
            CircleInfoD.open(map , cityCircle);
          })


          //Lower Danger
          for (var city2 in data2) {
          var cityCircle2 = new google.maps.Circle({
            strokeColor: '#24f25b',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#24f25b',
            fillOpacity: 0.17,
            map: map,
            clickable : true,
            center: data2[city2].center,
            radius: Math.sqrt(data2[city2].Dangerlevel) * 1000
          });
          for (var city3 in data3) {
          var cityCircle2 = new google.maps.Circle({
            strokeColor: '#24f25b',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#24f25b',
            fillOpacity: 0.35,
            clickable : true,
            map: map,
            center: data3[city3].center,
            radius: Math.sqrt(data3[city3].Dangerlevel) * 1000
          });
          }
          }
        }
      }
      
